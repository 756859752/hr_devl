<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 如果用省略dao层的实现层  命名空间是接口类的全路径 -->
   <mapper namespace="dao.ConfigFileFirstKindMapper">
   	<insert id="insertConfigFileFirstKind" parameterType="ConfigFileFirstKind" >
   		insert into config_file_first_kind (ffk_id,first_kind_id,first_kind_name,first_kind_salary_id,first_kind_sale_id) values(#{ffkId},#{firstKindId},#{firstKindName},#{firstKindSalaryId},#{firstKindSaleId})
   	</insert>
   	<delete id="deleteConfigFileFirstKind" parameterType="_short">
   		delete from  config_file_first_kind  where ffk_id=#{id}
   	</delete>
   	<update id="updateConfigFileFirstKind" parameterType="ConfigFileFirstKind">
   		update config_file_first_kind  set first_kind_id=#{firstKindId},first_kind_name=#{firstKindName},first_kind_salary_id=#{firstKindSalaryId},first_kind_sale_id=#{firstKindSaleId}
   		where ffk_id=#{ffkId}
   	</update>
   	<resultMap type="ConfigFileFirstKind" id="tid" >
<id property="ffkId" column="ffk_id"/>
<result property="firstKindId" column="first_kind_id"/>
<result property="firstKindName" column="first_kind_name"/>
<result property="firstKindSalaryId" column="first_kind_salary_id"/>
<result property="firstKindSaleId" column="first_kind_sale_id"/>   </resultMap>
   		
   		<select id="selectConfigFileFirstKindById" parameterType="_short" resultMap="tid">
   			select * from config_file_first_kind  where ffk_id=#{id}
   		</select>
   		<select id="selectAllConfigFileFirstKind" resultMap="tid">
   			select * from  config_file_first_kind 
   		</select>
  </mapper>
  